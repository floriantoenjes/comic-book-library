@model ComicBookLibraryManagerWebApp.ViewModels.AccountRegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    <div class="row pad-bottom">
        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(a => a.Email, new { @class = "control-label" })
                @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Password, new { @class = "control-label" })
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "password" })
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.ConfirmPassword, new { @class = "control-label" })
                @Html.TextBoxFor(a => a.ConfirmPassword, new { @class = "form-control", type = "password" })
            </div>

            <div class="col-md-12">
                <div class="pad-top">
                    <button type="submit" class="btn btn-success btn-lg margin-right">
                        <span class="glyphicon glyphicon-save"></span> Register
                    </button>
                </div>
            </div>
        </div>
    </div>
}


